<%= simple_form_for @product, url: admin_product_path do |f| %>
  <div class="form-group">
    <%= f.input :name  , label: "產品名稱", input_html:{class: "form-control"} %>
    <%= f.input :description  , label: "描述", input_html:{class: "form-control"} %>

    <%= f.input :qty , label: '數量', input_html:{class: "form-control" ,} %>
    <%= f.input :price , label: "價格", input_html:{class: "form-control"} %>
    <% if @product.image_url.url.present? %>
        <%= image_tag(@product.image_url.medium.url) %>
    <% end %>
    <%= f.input :image_url, as: :file %>

  </div>
  <%= f.submit "Submit", class: "btn btn-primary", data: {disable_with: "Submitting....."} %>

<% end %>
